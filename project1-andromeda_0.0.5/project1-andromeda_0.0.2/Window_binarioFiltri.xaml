                <RichTextBox x:Name="TextCommenti" HorizontalAlignment="Left" VerticalAlignment="Top" Opacity="0.5" Height="49" Width="221" Margin="0,6,0,0">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="Scrivere qui ..."/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Grid>
        </Expander>
        <Image HorizontalAlignment="Left" Height="31" Margin="10,17,0,0" VerticalAlignment="Top" Width="32" Source="Imgs/settings.png"/>
        <Image HorizontalAlignment="Left" Height="23" Margin="16,224,0,0" VerticalAlignment="Top" Width="23" Source="Imgs/filter.png"/>

    </Grid>
</Window>
