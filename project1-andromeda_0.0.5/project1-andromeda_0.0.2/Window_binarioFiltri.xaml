        <TextBlock x:Name="TextBlock_lunghezza" HorizontalAlignment="Left" Margin="30,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Dimensione "/><Run Text="binario"/><Run Text=" (m)"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="TextBox_lungezza" HorizontalAlignment="Left" Height="21" Margin="180,105,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="73"/>
